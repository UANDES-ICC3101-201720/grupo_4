<Window x:Class="ProyectoPOO3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoPOO3"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1280" WindowStyle="ThreeDBorderWindow">
    <Window.Background>
        <ImageBrush Stretch="Uniform" />
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="imagen.jpg"/>
        </Grid.Background>
        <Button Name="PassDay" Visibility="Hidden" Content="Siguiente Dia" HorizontalAlignment="Left" Margin="45,361,0,0" VerticalAlignment="Top" Width="267" Background="#FFF5EBEB" Height="70" BorderBrush="#FFF5E5E5" FontWeight="Bold" FontSize="25" Click="PassDay_Click" />
        <Label Name="DiaLabel" Visibility="Hidden" HorizontalAlignment="Left" FontSize="24" Margin="45,20,0,0" Content="Dia 1" VerticalAlignment="Top" Foreground="White" Cursor="Help" Height="46" Width="111" FontWeight="Bold"/>
        <Button Name="GuardarArchivo" Visibility="Hidden" Content="Guardar en Archivo" Cursor="Hand" FontSize="24" HorizontalAlignment="Left" Margin="847,204,0,0" VerticalAlignment="Top" Width="267" Background="#FFF5EBEB" Click="GuardarArchivo_Click" Height="72" BorderBrush="#FFF5E5E5" FontWeight="Bold"/>
        <Button Name="Reportes" Visibility="Visible" Content="Reportes" Cursor="Hand" FontSize="24" HorizontalAlignment="Left" Margin="45,491,0,0" VerticalAlignment="Top" Width="267" Background="#FFF5EBEB" Click="Reportes_Click" Height="72" BorderBrush="#FFF5E5E5" FontWeight="Bold"/>
        <Button Name="Simulacion" Visibility="Visible" Content="Iniciar Simulacion" Cursor="Hand" FontSize="24" HorizontalAlignment="Left" Margin="45,361,0,0" VerticalAlignment="Top" Width="267" Background="#FFF5EBEB" Click="Simulacion_Click" Height="72" BorderBrush="#FFF5E5E5" FontWeight="Bold"/>
        <Button Name="Datos" Visibility="Hidden" Content="Simular" ToolTipService.InitialShowDelay="5000"   Cursor="Hand" FontSize="24" HorizontalAlignment="Left" Margin="45,361,0,0" VerticalAlignment="Top" Width="267" Background="#FFF3EFEF" Click="Datos_Click" Height="70" BorderBrush="#FFF5E5E5" FontWeight="Bold"/>
        <Button Name="SimularSerializable" Visibility="Hidden" Content="Iniciar Por Archivo" Cursor="Hand" FontSize="24" HorizontalAlignment="Left" Margin="45,226,0,0" VerticalAlignment="Top" Width="267" Background="#FFF5EBEB" Click="SimularSerializable_Click" Height="72" BorderBrush="#FFF5E5E5" FontWeight="Bold"/>
        <Button Name="Plano" Visibility="Visible" Content="Plano" Cursor="Hand" HorizontalAlignment="Left" Margin="45,226,0,0" VerticalAlignment="Top" FontSize="24" Width="267" Click="Plano_Click" Height="70" BorderBrush="#FFF9F9F9" FontWeight="Bold" Grid.IsSharedSizeScope="False" Background="White"/>
        <Label Name="Titulo_Principal" Visibility="Visible" Content="Opciones De Mall" HorizontalContentAlignment="Center" FontSize="25"  HorizontalAlignment="Left" Foreground="#FFF9F9F9" Margin="45,125,0,0" VerticalAlignment="Top" Height="51" Width="267" TextOptions.TextHintingMode="Fixed"/>
        <Label Name="PisosLabel" Visibility="Hidden" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Ingrese Cantidad de Pisos" HorizontalAlignment="Left" Margin="354,125,0,0" VerticalAlignment="Top" Foreground="#FFF9F9F9" Height="80" Width="520"/>
        <TextBox Name="PisosText" Visibility="Hidden" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="38" Margin="572,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" GotFocus="TextBox_TextChanged" Background="#FFF5F0F0" Foreground="Black" RenderTransformOrigin="0.441,0.448" FontSize="25"/>
        <Button Name="EnterPisos" Visibility="Hidden" Content="Enter" Cursor="Hand"  HorizontalAlignment="Left" Margin="538,561,0,0" VerticalAlignment="Top" Width="160" Background="#FFF3E7E7" BorderBrush="#FFA45050" Click="EnterPisos_Click" Height="73" FontSize="22" FontWeight="Bold" />
        <Button Name="EnterAreas" Visibility="Hidden" Content="Enter" Cursor="Hand" HorizontalAlignment="Left" Margin="538,561,0,0" VerticalAlignment="Top" Width="160" Background="#FFF5EEEE" BorderBrush="#FFA45050" Click="EnterArea_Click" Height="68" FontSize="22" FontWeight="Bold"/>
        <Button Name="EnterTiendas" Visibility="Hidden" Content="Enter" Cursor="Hand" HorizontalAlignment="Left" Margin="538,561,0,0" VerticalAlignment="Top" Width="160" Background="#FFF5ECEC" BorderBrush="#FFA45050" Click="EnterTiendas_Click" Height="73" FontSize="22" FontWeight="Bold"/>
        <Button Name="EnterTiendasArea" Visibility="Hidden" Content="Enter" Cursor="Hand" HorizontalAlignment="Left" Margin="538,565,0,0" VerticalAlignment="Top" Width="160" Background="White" BorderBrush="#FFA45050" Click="EnterTiendasArea_Click" Height="64" FontSize="22" FontWeight="Bold"/>
        <StackPanel Name="Panel" Visibility="Hidden" HorizontalAlignment="Left" Height="353" Margin="338,242,0,0" VerticalAlignment="Top" Width="509"  Background="{x:Null}"/>
        <Button Name ="EnterMall" Visibility="Hidden" FontSize="25" FontWeight="Bold" Content="Enter" HorizontalAlignment="Left" Margin="538,561,0,0" VerticalAlignment="Top" Width="160"  BorderBrush="#FFA45050" Click="EnterMall_Click" Height="73" Background="#FFD6D6D6"/>
        <ComboBox Name="TiendasGrid" Visibility="Hidden" HorizontalAlignment="Left" Margin="66,71,0,0" VerticalAlignment="Top" Width="390" SelectionChanged="TiendasGrid_SelectionChanged"/>
        <ComboBox Name="ReportesComboBox" Visibility="Hidden" HorizontalAlignment="Left" Margin="66,71,0,0" VerticalAlignment="Top" Width="390" SelectionChanged="ReportesComboBox_SelectionChanged"/>
        <StackPanel Name="AllPanel" Visibility="Hidden" HorizontalAlignment="Left" Height="280" Margin="45,71,0,0" VerticalAlignment="Top" Width="1148"/>
        <Button Content="Inicio" Name="Back" Visibility="Collapsed" HorizontalAlignment="Left" FontSize="25" Cursor="Hand" FontWeight="Bold" Margin="507,567,0,0" VerticalAlignment="Top" Width="220" Click="Back_Click" Height="67"/>
        <Button Name="salir" Content="Salir" HorizontalAlignment="Left" Margin="941,491,0,0" VerticalAlignment="Top" Width="252" Height="72" FontSize="24" FontWeight="Bold" Click="Button_Click"/>
        <Label Name="Titulo_Inicial" Content="Bienvenido al Simulador de Mall" FontSize="30" Foreground="#FFF9F9F9" Margin="407,34,407.6,0" VerticalAlignment="Top" Height="60" RenderTransformOrigin="-0.003,0.533"/>
        

    </Grid>
</Window>