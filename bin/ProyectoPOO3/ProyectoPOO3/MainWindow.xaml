<Window x:Class="ProyectoPOO3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoPOO3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF2E2B2B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Name="Boton" Visibility="Hidden" Content="Button" HorizontalAlignment="Left" Margin="93,228,0,0" VerticalAlignment="Top" Width="75" Background="#FF9E5A5A"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,20,0,0" TextWrapping="Wrap" Text="Dia 1" VerticalAlignment="Top" Foreground="White"/>
        <Button Name="Reportes" Visibility="Hidden" Content="Reportes" HorizontalAlignment="Left" Margin="93,189,0,0" VerticalAlignment="Top" Width="75" Background="#FF9E5A5A"/>
        <Button Name="Datos" Visibility="Hidden" Content="Simular" HorizontalAlignment="Left" Margin="93,148,0,0" VerticalAlignment="Top" Width="75" Background="#FFDE7272" Click="Datos_Click"/>
        <Button Name="Plano" Visibility="Hidden" Content="Plano" HorizontalAlignment="Left" Margin="93,113,0,0" VerticalAlignment="Top" Width="75" Background="#FFB86666"/>
        <Label Name="PisosLabel" Visibility="Visible" Content="Cantidad de Pisos" HorizontalAlignment="Left" Margin="128,107,0,0" VerticalAlignment="Top" Foreground="#FFF9F9F9"/>
        <TextBox Name="PisosText" Visibility="Visible" HorizontalAlignment="Left" Height="23" Margin="246,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="34" TextChanged="TextBox_TextChanged" Background="{x:Null}" Foreground="White"/>
        <Button Name="EnterPisos" Visibility="Visible" Content="Enter" HorizontalAlignment="Left" Margin="226,219,0,0" VerticalAlignment="Top" Width="75" Background="{x:Null}" BorderBrush="#FFA45050" Click="EnterPisos_Click"/>
        <Button Name="EnterAreas" Visibility="Hidden" Content="Enter" HorizontalAlignment="Left" Margin="226,219,0,0" VerticalAlignment="Top" Width="75" Background="{x:Null}" BorderBrush="#FFA45050" Click="EnterArea_Click"/>
        <Button Name="EnterTiendas" Visibility="Hidden" Content="Enter" HorizontalAlignment="Left" Margin="226,219,0,0" VerticalAlignment="Top" Width="75" Background="{x:Null}" BorderBrush="#FFA45050" Click="EnterTiendas_Click"/>
        <Button Name="EnterTiendasArea" Visibility="Hidden" Content="Enter" HorizontalAlignment="Left" Margin="226,219,0,0" VerticalAlignment="Top" Width="75" Background="{x:Null}" BorderBrush="#FFA45050" Click="EnterTiendasArea_Click"/>


    </Grid>
</Window>

        